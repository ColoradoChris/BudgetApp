<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Edit This Income</h1>
            <form action="/income/<%= income._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="type">Type:</label>
                    <select class="form-control" name="type" value="<%= income.type %>">
                        <option value="Paycheck">Paycheck</option>
                        <option value="Refund">Refund</option>
                        <option value="Bonus">Bonus</option>
                        <option value="Miscellaneous">Miscellaneous</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="amount">Amount:</label>
                    <input class="form-control" type="number" name="amount" min="0.01" step="0.01" value="<%= income.amount %>">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input class="form-control" type="date" name="date" value="<%= income.date %>">
                </div>
                <div class="form-group">
                    <button class="form-control btn btn-success">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>